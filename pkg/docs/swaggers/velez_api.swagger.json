    "ContainerHardware": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "number",
          "format": "float",
          "title": "Top level cpu share amount.\n0.5 - give half a core\n1 - allocates 1 core exactly\n2 - allocates 2 cores"
        },
        "ramMb": {
          "type": "integer",
          "format": "int64"
        },
        "memorySwapMb": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "ContainerHealthcheck": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "title": "if command is not presented,\nvelez will simply\nwait \"retires\" times for \"interval_second\" seconds each time,\nuntil container get status Running"
        },
        "intervalSecond": {
          "type": "integer",
          "format": "int64"
        },
        "timeoutSecond": {
          "type": "integer",
          "format": "int64"
        },
        "retries": {
